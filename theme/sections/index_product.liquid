


{% assign id = section.id %}
{% assign product = all_products[section.settings.product] %}

<section class="padded padded--thick padded--underheader" data-section-id="{{ section.id }}" data-section-type="featured-product">
  <div class="grid grid--guttered grid--middle grid--center">
    <div class="col col--4of12 col--tablet_landscape--6of12 col--tablet_portrait--8of12 col--phone--12of12">
      <div class="box">
        <div class="medium_bottom">{{product.description}}</div>
        <a href="{{product.url}}" class="a--underline">Get it today</a>
      </div>
    </div>
    <div class="col col--4of12 col--tablet_landscape--6of12 col--phone--12of12">
      <a href="{{product.url}}"><img src="{{product.featured_image.src|img_url: 'original'}}" alt="{{product.featured_image.alt}}"></a>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Featured Product",
  "class": "index-section",
  "settings": [
    {
      "id": "product",
      "type": "product",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "category": "Products"
    }
  ]
}
{% endschema %}