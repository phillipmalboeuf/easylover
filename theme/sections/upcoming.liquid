<div class="padded padded--very_thick border_bottom text_center">
	<h1 class="h1--massive">{{page.title}}</h1>
	{% if page.content %}{{page.content}}{% endif %}
</div>

<section>
	{% for block in section.blocks %}
  <div class="padded padded--very_thick border_bottom text_center dark_back image_back relative">
    {% include 'picture', image: block.settings.background, class: 'img--back' %}
    <div class="relative ztop">
      <h5 class="medium_bottom">{{block.settings.subtitle}}</h5>
      <h2 class="h2--huge medium_bottom">{{block.settings.title}}</h2>
      <a href="{{block.settings.cta_link}}" class="a--underline strong">{{block.settings.cta}}</a>
    </div>
  </div>
	{% endfor %}
</section>


{% schema %}
{
  "name": "Upcoming",
  "settings": [
  ],
  "blocks": [
    {
      "type": "upcoming",
      "name": "Upcoming",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "id": "subtitle",
          "type": "text",
          "label": "Subtitle"
        },
        {
          "id": "cta",
          "type": "text",
          "label": "CTA"
        },
        {
          "id": "cta_link",
          "type": "url",
          "label": "CTA Link"
        },
        {
          "id": "background",
          "type": "image_picker",
          "label": "Background"
        }
      ]
    }
  ]
}
{% endschema %}