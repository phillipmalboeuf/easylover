


{% assign id = section.id %}
{% assign collection = collections[section.settings.collection] %}

<section class="padded padded--thick padded--underheader" data-section-id="{{ section.id }}" data-section-type="featured-collection">
  <div class="grid grid--guttered grid--middle grid--center">
    <div class="col col--5of12 col--tablet_landscape--6of12 col--phone--12of12">
      <a href="/collections">
        {% if section.settings.image != blank %}
          {% include 'picture', image: section.settings.image %}
        {% else %}
          {% include 'picture', image: collection.image %}
        {% endif %}
      </a>
    </div>
    <div class="col col--4of12 col--phone--first col--tablet_landscape--6of12 col--tablet_portrait--8of12 col--phone--12of12">
      <div class="box">
        <div class="medium_bottom">{{collection.description}}</div>
        <a href="/collections" class="a--underline">Get it today</a>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Featured Collection",
  "class": "index-section",
  "settings": [
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Photo"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Products"
    }
  ]
}
{% endschema %}